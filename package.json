{
    "name": "chain-watchers",
    "private": true,
    "workspaces": [
        "client",
        "server",
        "shared"
    ],
    "scripts": {
        "dev:client": "cd client && npm run dev",
        "dev:server": "cd server && npm run dev",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "dependencies": {
        "@heroicons/react": "^2.2.0",
        "helius-sdk": "^1.5.0",
        "lucide-react": "^0.477.0",
        "tailwindcss": "^4.0.9"
    }
}
